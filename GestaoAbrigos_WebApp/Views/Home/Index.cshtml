@{
    ViewData["Title"] = "Página Inicial";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Painel de Recursos</h1>
    <div class="row g-4">
        <!-- Abrigo -->
        <div class="col-md-3">
            <a href="~/Abrigo" class="text-decoration-none">
                <div class="card text-center shadow-sm h-100">
                    <div class="card-body">
                        <i class="fa-solid fa-house fa-3x mb-3 text-primary"></i>
                        <h5 class="card-title">Abrigo</h5>
                        <p class="card-text">Gerencie os abrigos cadastrados.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Localização -->
        <div class="col-md-3">
            <a href="~/Localizacao" class="text-decoration-none">
                <div class="card text-center shadow-sm h-100">
                    <div class="card-body">
                        <i class="fa-solid fa-map-location-dot fa-3x mb-3 text-success"></i>
                        <h5 class="card-title">Localização</h5>
                        <p class="card-text">Visualize e edite localizações.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Ocupante -->
        <div class="col-md-3">
            <a href="~/Ocupante" class="text-decoration-none">
                <div class="card text-center shadow-sm h-100">
                    <div class="card-body">
                        <i class="fa-solid fa-users fa-3x mb-3 text-warning"></i>
                        <h5 class="card-title">Ocupantes</h5>
                        <p class="card-text">Gerencie os ocupantes dos abrigos.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Recurso -->
        <div class="col-md-3">
            <a href="~/Recurso" class="text-decoration-none">
                <div class="card text-center shadow-sm h-100">
                    <div class="card-body">
                        <i class="fa-solid fa-boxes-stacked fa-3x mb-3 text-danger"></i>
                        <h5 class="card-title">Recursos</h5>
                        <p class="card-text">Controle os recursos disponíveis.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
