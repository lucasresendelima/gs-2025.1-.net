@model GestaoAbrigos_WebApp.Domain.Entities.OcupanteEntity

@{
    ViewData["Title"] = "Excluir Ocupante";
}

<h2>@ViewData["Title"]</h2>

<h4>Tem certeza que deseja excluir este ocupante?</h4>
<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>

    <dt class="col-sm-2">Idade</dt>
    <dd class="col-sm-10">@Model.Idade</dd>

    <dt class="col-sm-2">Gênero</dt>
    <dd class="col-sm-10">@Model.Genero</dd>

    <dt class="col-sm-2">Abrigo ID</dt>
    <dd class="col-sm-10">@Model.AbrigoId</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
