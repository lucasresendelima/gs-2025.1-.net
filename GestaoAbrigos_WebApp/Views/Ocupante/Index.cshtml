@model IEnumerable<GestaoAbrigos_WebApp.Domain.Entities.OcupanteEntity>

@{
    ViewData["Title"] = "Ocupantes";
}

<h2>Ocupantes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Ocupante</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Idade</th>
            <th>Gênero</th>
            <th>Abrigo ID</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Idade</td>
                <td>@item.Genero</td>
                <td>@item.AbrigoId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
