@model GestaoAbrigos_WebApp.Domain.Entities.RecursoEntity

@{
    ViewData["Title"] = "Excluir Recurso";
}

<h2>@ViewData["Title"]</h2>

<h4>Tem certeza que deseja excluir este recurso?</h4>
<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>

    <dt class="col-sm-2">Tipo</dt>
    <dd class="col-sm-10">@Model.Tipo</dd>

    <dt class="col-sm-2">Unidade de Medida</dt>
    <dd class="col-sm-10">@Model.UnidadeMedida</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
