@model GestaoAbrigos_WebApp.Domain.Entities.RecursoEntity

@{
    ViewData["Title"] = "Detalhes do Recurso";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Recurso</h4>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Tipo</dd>

        <dt class="col-sm-2">Unidade de Medida</dt>
        <dd class="col-sm-10">@Model.UnidadeMedida</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
