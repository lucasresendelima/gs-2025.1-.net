@model GestaoAbrigos_WebApp.Domain.Entities.AbrigoEntity

@{
    ViewData["Title"] = "Excluir Abrigo";
}

<h2>@ViewData["Title"]</h2>

<h4>Tem certeza que deseja excluir este abrigo?</h4>
<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>

    <dt class="col-sm-2">Capacidade</dt>
    <dd class="col-sm-10">@Model.Capacidade</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>

    <dt class="col-sm-2">Localização ID</dt>
    <dd class="col-sm-10">@Model.LocalizacaoId</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
