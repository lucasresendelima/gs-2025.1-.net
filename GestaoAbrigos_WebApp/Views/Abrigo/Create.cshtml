@model GestaoAbrigos_WebApp.Application.Dtos.AbrigoDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Novo Abrigo";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Capacidade" class="form-label"></label>
        <input asp-for="Capacidade" class="form-control" />
        <span asp-validation-for="Capacidade" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Status" class="form-label"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="LocalizacaoId" class="form-label"></label>
        <input asp-for="LocalizacaoId" class="form-control" />
        <span asp-validation-for="LocalizacaoId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
