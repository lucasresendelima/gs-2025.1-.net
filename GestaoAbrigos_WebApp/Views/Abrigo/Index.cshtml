@model IEnumerable<GestaoAbrigos_WebApp.Domain.Entities.AbrigoEntity>

@{
    ViewData["Title"] = "Abrigos";
}

<h2>Abrigos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Abrigo</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Capacidade</th>
            <th>Status</th>
            <th>Localização ID</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Capacidade</td>
                <td>@item.Status</td>
                <td>@item.LocalizacaoId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
