@model GestaoAbrigos_WebApp.Domain.Entities.AbrigoEntity

@{
    ViewData["Title"] = "Detalhes do Abrigo";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Abrigo</h4>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Capacidade</dt>
        <dd class="col-sm-10">@Model.Capacidade</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Localização ID</dt>
        <dd class="col-sm-10">@Model.LocalizacaoId</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
